/*
 * Aider CE TUI Styles
 *
 * Uses Textual theme variables for consistent theming.
 * Theme defined in app.py (AIDER_THEME).
 */

* {
    background: $background;
    scrollbar-background: $surface;
    scrollbar-background-hover: $surface;
    scrollbar-background-active: $surface;
    scrollbar-color: $secondary;
    scrollbar-color-hover: $accent;  
    scrollbar-color-active: $accent;     
}

Screen {
    background: $background;
    layout: vertical;
    padding: 0;
    margin: 0;
    border: none;    
}

/* Output area */
#output {
    height: 1fr;
    width: 100%;
    background: $surface;
    padding: 0 0 0 1;
    margin: 0;
    scrollbar-size: 1 1;
}

/* Input area - floating card style */
#input {
    height: auto;
    max-height: 33%;
    min-height: 5;
    background: $surface;
    border: round $accent 50%;
    padding: 0 0 0 2;
    margin: 0 1 2 1;
    scrollbar-size: 1 1;
}

#input:focus {
    background: $surface;
}

/* Generic Input and TextArea styling */
Input, TextArea {
    background: $surface;
    border: none;
}

Input:focus, TextArea:focus {
    border: none;
    background: $surface;
}

Input > .input--placeholder, TextArea > .text-area--placeholder  {
    color: $secondary;
    background: $surface;
}

/* Footer - same background as everything else */
#footer {
    height: 1;
    width: 100%;
    background: $surface;
    color: $accent;
    padding: 0 1;
}
